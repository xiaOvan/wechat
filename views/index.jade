		var timestamp = '#{timestamp}';
		var appId = '#{appId}';
		var jsapi_ticket = '#{jsapi_ticket}';
	script(src='/wx.js')
	script(src='lib/js/react-with-addons.js')
	script(src='src/js/component.js')

